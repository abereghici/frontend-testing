{
  "name": "frontend-testing",
  "version": "1.0.0",
  "description": "Messing around with frontend testing tools",
  "keywords": [],
  "homepage": "https://github.com/abereghici/frontend-testing#readme",
  "bugs": {
    "url": "https://github.com/abereghici/frontend-testing/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abereghici/frontend-testing.git"
  },
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "scripts": {
    "dev": "node scripts/serve.mjs",
    "build": "NODE_ENV=production && node scripts/build.mjs",
    "test": "jest --coverage",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx,.mjs .",
    "check-types": "tsc",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|mjs|ts|tsx|json|css|html|md|mdx)\"",
    "check-format": "npm run prettier -- --list-different",
    "format": "npm run prettier -- --write",
    "validate": "run-p check-types check-format lint build test:coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest-axe": "^3.5.4",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "esbuild": "^0.15.6",
    "esbuild-css-modules-plugin": "^2.5.2",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.1",
    "jest-axe": "^6.0.0",
    "jest-environment-jsdom": "^29.0.1",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^2.1.1",
    "lint-staged": "^13.0.3",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "typescript-plugin-css-modules": "^3.4.0"
  }
}
